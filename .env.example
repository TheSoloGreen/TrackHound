# TrackHound Configuration
# Copy this file to .env and modify as needed

# Application
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
# SQLite (default - simple, no external dependencies):
DATABASE_URL=sqlite+aiosqlite:///./data/trackhound.db
# PostgreSQL (for larger deployments):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/trackhound

# Security - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -hex 32
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# JWT Token expiration (in minutes) - default 1 week
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Plex OAuth Configuration
PLEX_CLIENT_IDENTIFIER=trackhound-pro
PLEX_PRODUCT=CineAudit Pro
PLEX_VERSION=1.0.0

# CORS - comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
